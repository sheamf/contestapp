<%= form_for @order, :html => { :class => "form-horizontal order" } do |f| %>

    <% if @order.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'form-control' %>
    </div>
    <%= error_span(@order[:number]) %>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%= error_span(@order[:email]) %>
  </div>
  <div class="control-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
    <%= error_span(@order[:first_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
    <%= error_span(@order[:last_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :shopify_order_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :shopify_order_id, :class => 'form-control' %>
    </div>
    <%= error_span(@order[:shopify_order_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :order_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :order_date, :class => 'form-control' %>
    </div>
    <%= error_span(@order[:order_date]) %>
  </div>
  <div class="control-group">
    <%= f.label :total, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :total, :class => 'form-control' %>
    </div>
    <%= error_span(@order[:total]) %>
  </div>
  <div class="control-group">
    <%= f.label :financial_status, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :financial_status, :class => 'form-control' %>
    </div>
    <%= error_span(@order[:financial_status]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            orders_path, :class => 'btn btn-default' %>

<% end %>
